<div class="form-wrapper">
  <div class ="form-container">
<!--     <div class="row">
      <div class="col-sm-6 col-sm-offset-3"> -->
        <h2 class="form-heading">Log in to your account</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, class: "input-field" %>
            <%= f.input :password, required: false, class: "input-field" %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "button_form"%>
          </div>
        <% end %>
        <ul class="layout-links">
          <li><%= render "devise/shared/links" %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
