<!-- show details of one single location -->
<div class="grid-details">

  <div class="details-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @location.photo%>')">
  </div>

  <div class="location-description">
    <br>
    <h3><%= @location.name %></h3>
    <p><%= @location.description %></p>
  </div>

  <div class="location-details-card">
    <div class="location-details-card2">
      <h4>Location Details</h4>
      <p>â‚¬<%= @location.price %></p>
    </div>
      <hr>
    <div class="table-details">
      <div class="">
        <div class="col-md-4">
          <div class="fa-icon_1">
            <i class="fas fa-users"></i>
            <p><%= @location.capacity %></p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="fa-icon_1">
            <i class="fas fa-utensils"></i>
            <p><%= @location.catering %></p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="fa-icon_1">
            <i class="fas fa-music"></i>
            <p><%= @location.music ? "yes" : "no" %></p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="fa-icon_1">
            <i class="fas fa-parking"></i>
            <p><%= @location.parking ? "yes" : "no" %></p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="fa-icon_1">
            <i class="fas fa-smoking"></i>
            <p><%= @location.smoking ? "yes" : "no" %></p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="fa-icon_1">
            <i class="fab fa-accessible-icon"></i>
            <p><%= @location.accessible ? "yes" : "no" %></p>
          </div>
        </div>
      </div>
    </div>
    <br>
    <br>
    <div class="buttons-index">
      <div class="buttons-index-button">
        <%if user_signed_in? %>
          <% if @location.user_id == current_user.id %>
           <%=  link_to "Edit your Location", edit_users_location_path(@location), class: "button-details" %>
          <% else %>
           <%=  link_to "Book now", users_book_path(@location), class: "button-details" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>


