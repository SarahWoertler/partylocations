<!-- access @avails in js -->
<%= content_tag "div", id: "avails", data: {avails: @avails} do %>
<% end %>

<!-- build the page with the datepicker form -->

<div class="container">
  <div class="row">
    <div class='col-xs-12 col-sm-4' id="text-container">
      <h2> Select an available date for <%= @location.name %></h3>
      <h4>You can book the location on a daily basis. Please make your choice below</h3>
      <%= form_for([:users, @avail], url: users_create_booking_path) do %>
      <br>
      <br>
        <div class="form-group">
          <div class='input-group date' id='datetimepicker1'>
              <%= text_field_tag(:date, "", class: 'form-control') %>
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
              </span>
          </div>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <br>
          <div class="input-group-btn">
            <button type="submit" class="btn btn-default" id="submit">Submit</button>
          </div>
        </div>
      <% end %>
    </div>
    <div class=" col-xs-12 col-sm-6">
      <div class="image-div">
        <%= cl_image_tag @location.photo, id: "place-image" %>
      </div>
    </div>
  </div>
</div>
